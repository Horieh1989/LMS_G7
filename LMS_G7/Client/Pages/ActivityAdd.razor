@page "/ActivityAdd"
@using Microsoft.AspNetCore.Authorization


@attribute [Authorize(Roles = "Admin, Teacher")]
<section class="device-edit">
    <EditForm Model="@Activity" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Module ID</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">
                        <InputText id="Name" @bind-Value="Activity.Name" class="form-control col-md-8"></InputText>
                        <ValidationMessage For="@(()=>Activity.Name)"></ValidationMessage>
                    </td>
                    <td scope="row">
                        <InputDate id="StartDate" @bind-Value="Activity.StartDate" class="form-control col-md-8"></InputDate>
                        <ValidationMessage For="@(()=>Activity.StartDate)"></ValidationMessage>
                    </td>
                    <td scope="row">
                        <InputDate id="EndDate" @bind-Value="Activity.EndDate" class="form-control col-md-8"></InputDate>
                        <ValidationMessage For="@(()=>Activity.EndDate)"></ValidationMessage>
                    </td>
                    <td scope="row">
                        <InputNumber id="ModuleId" @bind-Value="Activity.ModuleId" class="form-control col-md-8"></InputNumber>
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="@("ListofActivity")" class="btn btn-outline-primary">Back to Activity List</a>&nbsp;
        <button type="submit" class="btn btn-primary me-1">Add Activity</button>
    </EditForm>
</section>