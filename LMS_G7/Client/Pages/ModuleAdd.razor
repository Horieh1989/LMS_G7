@page "/moduleadd"
@inject IModuleDataService ModuleDataService
@inject NavigationManager Navigation

<h3>Add Module</h3>

<div>
    <form>
        <div class="form-group">
            <label for="moduleName">Module Name</label>
            <input type="text" class="form-control" id="moduleName" @bind="newModule.Name">
        </div>
        <div class="form-group">
            <label for="moduleDescription">Module Description</label>
            <textarea class="form-control" id="moduleDescription" rows="3" @bind="newModule.Description"></textarea>
        </div>
        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" class="form-control" id="startDate" @bind="newModule.StartDate">
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" class="form-control" id="endDate" @bind="newModule.EndDate">
        </div>
        <div class="form-group">
            <label for="courseId">Course Id</label>
            <input type="number" class="form-control" id="courseId" @bind="newModule.CourseId">
        </div>
        <a href="@($"modules")" class="btn btn-outline-primary">Back to Module list</a>&nbsp;

        <button type="button" class="btn btn-primary" @onclick="AddModule">Add Module</button>
    </form>
</div>

@code {
    Module newModule = new Module();

    void AddModule()
    {
        ModuleDataService.AddModule(newModule);
        Navigation.NavigateTo("/modules"); // Redirect to the module list page
    }
}
