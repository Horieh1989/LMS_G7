@page "/CourseUpdate/{Id:int}"
@using LMS_G7.Shared.Domain
<h3>CourseUpdate</h3>


<EditForm Model="@Course" OnValidSubmit="@HandleValidSubmit">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Course Id</th>
                <th scope="col">Name</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">@Course.Id</td>
                <td scope="row">
                    <InputText id="Name" @bind-Value="Course.Name" class="form-control col-md-8"></InputText>
                </td>
                <td scope="row">
                    <InputDate id="StartDate" @bind-Value="Course.StartDate" class="form-control col-md-8"></InputDate>
                </td>
                <td scope="row">
                    <InputDate id="EndDate" @bind-Value="Course.EndDate" class="form-control col-md-8"></InputDate>
                </td>
                <td scope="row">
                    <InputText id="Description" @bind-Value="Course.Description" class="form-control col-md-8"></InputText>
                </td>
            </tr>
        </tbody>
    </table>
    <a href="@($"CourseLst")" class="btn btn-outline-primary">Back to Course list</a>&nbsp;
    <button type="submit" class="btn btn-primary me-1">Save Course</button>
</EditForm>