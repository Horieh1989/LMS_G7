@page "/ActivityDelete/{Id:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "Admin, Teacher")]
<h3>ActivityDelete</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Activity Id</th>
            <th scope="col">Name</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Documents</th>
            <th scope="col">Module ID</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row">@activity.Id</td>
            <td scope="row">@activity.Name</td>
            <td scope="row">@activity.StartDate</td>
            <td scope="row">@activity.EndDate</td>
            <td scope="row">@activity.ModuleId</td>
        </tr>
    </tbody>
</table>
<a href="@($"/ListofActivity")" class="btn btn-outline-primary">Back to Activity list</a>

<AuthorizeView Roles="Admin, Teacher">
    <Authorized>
        <a class="btn btn-outline-primary" @onclick="() => Delete(activity.Id)">Delete</a>
    </Authorized>
</AuthorizeView>