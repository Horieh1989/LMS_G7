@inject HttpClient Http

<table class="table">
    <thead>
        <tr>
            <th scope="col">Activity Id</th>
            <th scope="col">Name</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>            
            <th scope="col">Module ID</th>
            <AuthorizeView Roles="Admin, Teacher">
                <Authorized>
                    <th scope="col">Update</th>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="Admin, Teacher">
                <Authorized>
                    <th scope="col">Delete</th>
                </Authorized>
            </AuthorizeView>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in ActivityLst)
        {
            <tr>
                <td scope="row">@activity.Id</td>
                <td scope="row">@activity.Name</td>
                <td scope="row">@activity.StartDate</td>
                <td scope="row">@activity.EndDate</td>                
                <td scope="row">@activity.ModuleId</td>
                <td scope="row"><a href="@($"activityview/{activity.Id}")" class="btn btn-outline-primary">View</a></td>
                <AuthorizeView Roles="Admin, Teacher">
                    <Authorized>
                        <td scope="row"><a href="@($"userupdate/{activity.Id}")" class="btn btn-outline-primary">Update</a></td>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView Roles="Admin, Teacher">
                    <Authorized>
                        <td scope="row"><a href="@($"userdelete/{activity.Id}")" class="btn btn-outline-primary">Delete</a></td>
                    </Authorized>
                </AuthorizeView>
            </tr>
        }
    </tbody>
</table>
